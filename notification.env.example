# Rename this file to notification.env and place it in the path defined in the script
# (Default: /scripts/notification.env)

# Define your webhook URL here
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/your_webhook_here"

# Function called by the main script
# Argument $1 contains the message text
send_notif() {
    local message="$1"
    
    # Example: Sending to Discord
    curl -H "Content-Type: application/json" \
         -X POST \
         -d "{\"content\": \"$message\"}" \
         $DISCORD_WEBHOOK_URL
    
    # Example: Sending to Gotify
    # curl -X POST "https://gotify.example.com/message?token=YOUR_TOKEN" \
    #      -F "title=Docker Update" \
    #      -F "message=$message" \
    #      -F "priority=5"
}
